def match_client(client)
  client.puts "Please enter your unique id or hit enter to create a new user."
  id = get_input(client)

end


describe '#match_client' do
  xit 'asks for a unique id and takes client input' do
    client.provide_input("\n")
    server.match_client(@client_socket)
    expect(client.output).to include "Please enter your unique id or hit enter to create a new user."
  end

  xit 'uses the client input to return a new user or an existing user' do
    client.provide_input("\n")
    expect(server.match_client(@client_socket)).to be_a User
    client2.provide_input("" + user.id)
    expect(server.match_client(@client2_socket)).to eq user
  end
end
